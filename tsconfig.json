{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "sourceMap": true,
    "moduleResolution": "Node",
    "lib": ["es2017", "dom", "ESNext"],
    "types": ["node", "react"],
    "jsx": "react",
    "removeComments": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src"
  },
  "exclude": ["node_modules", "dist", "config", "demo"]
}
